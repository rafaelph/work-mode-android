<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    tools:context=".mainscreen.view.MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/status_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/work_mode_status_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="60dp"
                android:layout_marginRight="60dp"
                android:text="@string/work_mode_status_text"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/work_mode_status_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/work_mode_status_label"
                android:layout_toRightOf="@id/work_mode_status_label"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Enabled"
                tools:textColor="#388E3C" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/start_time_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/status_card_view"
        android:layout_marginBottom="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/work_start_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="29dp"
                android:layout_marginRight="29dp"
                android:text="Start Time"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/work_start_time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/work_start_time_label"
                android:layout_toRightOf="@id/work_start_time_label"
                android:gravity="center"
                android:text="--"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="7:00 AM" />

            <ImageView
                android:id="@+id/set_start_time_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:tint="#455A64"
                app:srcCompat="@drawable/ic_time_24dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/end_time_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_time_card_view"
        android:layout_marginBottom="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/work_end_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:text="Stop Time"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/work_end_time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/work_end_time_label"
                android:layout_toRightOf="@id/work_end_time_label"
                android:gravity="center"
                android:text="--"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="12:30 PM" />

            <ImageView
                android:id="@+id/set_end_time_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:tint="#455A64"
                app:srcCompat="@drawable/ic_time_24dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/work_days_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/end_time_card_view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/work_days_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="26dp"
                android:layout_marginRight="26dp"
                android:text="Work Days"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/work_days_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/work_days_label"
                android:layout_toLeftOf="@+id/set_days_button"
                android:layout_toRightOf="@id/work_days_label"
                android:layout_toStartOf="@+id/set_days_button"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="M, T, W, Th, F, Sa, Su" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/set_days_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:tint="#455A64"
                app:srcCompat="@drawable/ic_set_days_24dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/enable_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/work_days_card_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:checked="false"
        android:theme="@style/MySwitch"
        android:thumb="@drawable/ic_recurrence_bubble_fill"
        tools:checked="true" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"/>

</RelativeLayout>
